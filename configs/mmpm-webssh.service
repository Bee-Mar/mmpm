[Unit]
Description=MMPM (Python3) WebSSH
After=syslog.target network.target
StartLimitBurst=5, StartLimitIntervalSec=1

[Service]
User=bpm
WorkingDirectory=/home/bpm
ExecStart=/home/bpm/.local/bin/wssh --port=7893
ExecReload=/bin/kill -s HUP $MAINPID
Type=simple
PIDFile=/var/run/webssh.pid
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target
