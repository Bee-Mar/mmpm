{
  "packages": [
    "python@3.10",
    "bun@1.0.25",
    "pm2@5.3.1",
    "pdm@2.12.3",
    "python310Packages.pip@23.2.1"
  ],
  "env": {
    "VENV_DIR": ".venv"
  },
  "shell": {
    "init_hook": [
      "[ -d $VENV_DIR ] && source $VENV_DIR/bin/activate"
    ],
    "scripts": {
      "setup": [
        "pdm install && source $VENV_DIR/bin/activate",
        "cd ui && bun install;"
      ]
    }
  }
}
